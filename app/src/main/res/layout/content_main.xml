<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:gravity="fill_vertical"
    android:background="#0F0F0F7F"
    android:orientation="vertical"
    android:padding="8dip">
    <TextView
        android:id="@+id/show_service_usage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.54"
        android:fontFamily="sans-serif"
        android:paddingTop="8dip"
        android:text="@string/servie_usage_strings"
        android:textColor="#000000"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/checkBox"
        style="@android:style/Widget.CompoundButton.CheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:text="@string/prompt"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="2dip"
        android:paddingBottom="20dip" >

        <Button
            android:id="@+id/allowed_start_collection"
            android:layout_width="54dip"
            android:layout_height="match_parent"
            android:layout_marginEnd="40dip"
            android:alpha="0.87"
            android:background="#5F0FEF7F"
            android:fontFamily="sans-serif-medium"
            android:text="@string/allow"
            android:textColor="#000000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/deny_collection_service"
            android:layout_width="40dip"
            android:layout_height="match_parent"
            android:layout_marginStart="54dip"
            android:alpha="0.87"
            android:background="#5FEF0F7F"
            android:fontFamily="sans-serif-medium"
            android:text="@string/deny"
            android:textColor="#FF4081"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>
